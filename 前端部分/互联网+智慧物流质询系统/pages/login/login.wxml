<!--pages/login/login.wxml-->
<view class="mycontainer">
  <text class="mytext">登录</text>
  <form>
    <view class="input-text">
      <input type="text" class="input-text1" name="userId" id="userId" placeholder="手机号或邮箱" bindinput="setuserId" />
    </view>
    <view class="input-text">
      <input type="password" class="input-text1" name="password" id="password" placeholder="密码" bindinput="setpassword" />
    </view>
      <button class="button1"hover-class="mybutton-hover1" bindtap="login">登陆</button>
  </form>
</view>
